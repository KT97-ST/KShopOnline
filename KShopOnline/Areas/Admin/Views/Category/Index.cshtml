@{

    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Models.Framework.Category>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Category List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Create date</th>
                        <th>Order</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Create date</th>
                        <th>Order</th>
                        <th>Status</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryID</td>
                            <td>@item.Name</td>
                            <td>@(item.CreateDate.HasValue?item.CreateDate.Value.ToString("dd/MM/yyyy") : "")</td>
                            <td>@item.Order.GetValueOrDefault(0)</td>
                            <td>@(item.Status.GetValueOrDefault(false)? "Active":"Blocked")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>